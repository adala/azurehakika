<div class="welcome-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center p-5">
                        <!-- Success Icon -->
                        <div class="welcome-icon mb-4">
                            <div class="icon-circle">
                                <i class="fas fa-envelope-open-text fa-3x text-primary"></i>
                            </div>
                        </div>

                        <!-- Welcome Title -->
                        <h1 class="display-5 fw-bold text-primary mb-3">Welcome to Hakika!</h1>
                        
                        <!-- Success Message -->
                        <div class="success-message mb-4">
                            <p class="lead text-muted">
                                Your account has been created successfully. We've sent a verification email to:
                            </p>
                            <div class="email-highlight p-3 bg-light rounded">
                                <i class="fas fa-envelope me-2 text-primary"></i>
                                <strong>{{user.email}}</strong>
                            </div>
                        </div>

                        <!-- Instructions -->
                        <div class="instructions mb-5">
                            <div class="alert alert-info border-0">
                                <h5 class="alert-heading">
                                    <i class="fas fa-info-circle me-2"></i>Next Steps:
                                </h5>
                                <ol class="mb-0 ps-3">
                                    <li class="mb-2">Check your email inbox for the verification link</li>
                                    <li class="mb-2">Click the verification link in the email</li>
                                    <li class="mb-2">Return here to log in to your account</li>
                                </ol>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="action-buttons">
                            <div class="d-grid gap-3">
                                <a href="/auth/login" class="btn btn-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                                </a>
                                <div class="d-flex gap-2">
                                    <a href="/" class="btn btn-outline-primary flex-fill">
                                        <i class="fas fa-home me-2"></i>Back to Home
                                    </a>
                                    <button onclick="resendVerification()" class="btn btn-outline-secondary flex-fill" id="resendBtn">
                                        <i class="fas fa-redo me-2"></i>Resend Email
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Help Section -->
                        <div class="help-section mt-5 pt-4 border-top">
                            <h6 class="text-muted mb-3">
                                <i class="fas fa-question-circle me-2"></i>Didn't receive the email?
                            </h6>
                            <div class="small text-muted">
                                <p class="mb-1">• Check your spam or junk folder</p>
                                <p class="mb-1">• Make sure you entered the correct email address</p>
                                <p class="mb-1">• Wait a few minutes and try resending</p>
                                <p class="mb-0">• Contact support if you continue having issues</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.welcome-page {
    padding: 80px 0;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
}

.icon-circle {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    color: white;
    animation: bounce 2s infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    60% {
        transform: translateY(-5px);
    }
}

.email-highlight {
    border-left: 4px solid #667eea;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.card {
    border: none;
    border-radius: 20px;
}

.alert-info {
    background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
    border: none;
    border-radius: 15px;
}

.btn {
    border-radius: 10px;
    font-weight: 600;
    padding: 12px 24px;
}

.help-section {
    background: rgba(0,0,0,0.02);
    margin: 0 -20px -20px -20px;
    padding: 20px;
}
</style>

<script>
let resendCooldown = 0;

function resendVerification() {
    const btn = document.getElementById('resendBtn');
    
    if (resendCooldown > 0) {
        alert(`Please wait ${resendCooldown} seconds before resending.`);
        return;
    }

    // Disable button and show loading
    btn.disabled = true;
    const originalText = btn.innerHTML;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';

    // Simulate API call to resend verification email
    setTimeout(() => {
        // In a real application, you would make an API call here
        // For now, we'll simulate success
        btn.innerHTML = '<i class="fas fa-check me-2"></i>Email Sent!';
        btn.classList.remove('btn-outline-secondary');
        btn.classList.add('btn-success');
        
        // Show success message
        if (typeof FlashMessages !== 'undefined') {
            FlashMessages.show('Verification email sent successfully!', 'success');
        } else {
            alert('Verification email sent successfully!');
        }
        
        // Set cooldown (60 seconds)
        resendCooldown = 60;
        startCooldownTimer();
        
        // Re-enable button after 5 seconds and reset to original state
        setTimeout(() => {
            btn.disabled = false;
            btn.innerHTML = originalText;
            btn.classList.remove('btn-success');
            btn.classList.add('btn-outline-secondary');
        }, 5000);
        
    }, 2000);
}

function startCooldownTimer() {
    const timer = setInterval(() => {
        resendCooldown--;
        
        if (resendCooldown <= 0) {
            clearInterval(timer);
        }
    }, 1000);
}

// Add some interactive elements
document.addEventListener('DOMContentLoaded', function() {
    // Add typing animation to email address
    const emailElement = document.querySelector('.email-highlight strong');
    if (emailElement) {
        const email = emailElement.textContent;
        emailElement.textContent = '';
        let i = 0;
        
        const typeWriter = setInterval(() => {
            if (i < email.length) {
                emailElement.textContent += email.charAt(i);
                i++;
            } else {
                clearInterval(typeWriter);
            }
        }, 50);
    }
    
    // Add confetti effect on page load
    setTimeout(() => {
        if (typeof confetti === 'function') {
            confetti({
                particleCount: 100,
                spread: 70,
                origin: { y: 0.6 }
            });
        }
    }, 1000);
});
</script>

<!-- Optional: Add confetti library for celebration effect -->
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>