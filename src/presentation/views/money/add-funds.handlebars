<script>
document.addEventListener('DOMContentLoaded', function() {
    loadCurrentBalance();
    document.getElementById('momoForm').addEventListener('submit', handleMomoPayment);
    document.getElementById('cardForm').addEventListener('submit', handleCardPayment);
});

async function loadCurrentBalance() {
    try {
        const response = await fetch('/payments/balance', {
            headers: {
                'Authorization': 'Bearer ' + getAuthToken(),
                'Content-Type': 'application/json'
            }
        });
        
        if (!response.ok) {
            throw new Error('Failed to load balance');
        }
        
        const result = await response.json();
        
        if (result.success) {
            document.getElementById('currentBalance').textContent = 
                formatCurrency(result.data.balance, result.data.currency || 'USD');
        } else {
            throw new Error(result.message);
        }
    } catch (error) {
        console.error('Error loading balance:', error);
        document.getElementById('currentBalance').textContent = 'Error loading balance';
    }
}

async function handleMomoPayment(event) {
    event.preventDefault();
    
    const amount = document.getElementById('momoAmount').value;
    const provider = document.getElementById('momoProvider').value;
    const phone = document.getElementById('momoPhone').value;
    
    if (!amount || !provider || !phone) {
        alert('Please fill in all required fields');
        return;
    }
    
    // Show loading state
    showLoadingState('momo');
    
    try {
        const response = await fetch('/payments/initialize', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${localStorage.getItem('token')}`
            },
            body: JSON.stringify({
                amount: amount,
                paymentMethod: 'momo',
                currency: 'USD',
                provider: provider,
                phoneNumber: phone
            })
        });
        
        const result = await response.json();
        
        if (!response.ok) {
            throw new Error(result.message || 'Payment initialization failed');
        }
        
        if (result.success) {
            // Redirect to processing page
            window.location.href = `/dashboard/payment/processing?reference=${result.data.reference}&method=momo`;
        } else {
            throw new Error(result.message);
        }
        
    } catch (error) {
        hideLoadingState('momo');
        alert('Payment failed: ' + error.message);
    }
}

async function handleCardPayment(event) {
    event.preventDefault();
    
    const amount = document.getElementById('cardAmount').value;
    const cardNumber = document.getElementById('cardNumber').value.replace(/\s/g, '');
    const expiry = document.getElementById('cardExpiry').value;
    const cvc = document.getElementById('cardCvc').value;
    const name = document.getElementById('cardName').value;
    
    if (!amount || !cardNumber || !expiry || !cvc || !name) {
        alert('Please fill in all required fields');
        return;
    }
    
    showLoadingState('card');
    
    try {
        const response = await fetch('/payments/initialize', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer ' + getAuthToken()
            },
            body: JSON.stringify({
                amount: amount,
                paymentMethod: 'card',
                currency: 'USD',
                card: {
                    number: cardNumber,
                    expiry: expiry,
                    cvc: cvc,
                    name: name
                }
            })
        });
        
        const result = await response.json();
        
        if (!response.ok) {
            throw new Error(result.message || 'Payment processing failed');
        }
        
        if (result.success) {
            if (result.data.requiresPin) {
                // Redirect to PIN entry page
                window.location.href = `/payments/pin?reference=${result.data.reference}&method=card`;
            } else if (result.data.requires3DS) {
                // Handle 3DS authentication
                handle3DSAuthentication(result.data);
            } else {
                // Direct to processing
                window.location.href = `/payments/processing?reference=${result.data.reference}&method=card`;
            }
        } else {
            throw new Error(result.message);
        }
        
    } catch (error) {
        hideLoadingState('card');
        alert('Payment failed: ' + error.message);
    }
}

function showLoadingState(method) {
    const button = document.getElementById(`payWith${method === 'momo' ? 'Momo' : 'Card'}Btn`);
    button.disabled = true;
    button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
}

function hideLoadingState(method) {
    const button = document.getElementById(`payWith${method === 'momo' ? 'Momo' : 'Card'}Btn`);
    button.disabled = false;
    button.innerHTML = `<i class="fas fa-${method === 'momo' ? 'mobile-alt' : 'credit-card'} me-2"></i>Pay with ${method === 'momo' ? 'Mobile Money' : 'Card'}`;
}

function formatCurrency(amount, currency = 'USD') {
    return new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: currency
    }).format(amount);
}

function getAuthToken() {
    // Implement based on your authentication system
    return AuthService.getToken();
} 
</script>