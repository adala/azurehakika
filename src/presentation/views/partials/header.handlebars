<script>
// Function to fetch and update balance in header
async function updateHeaderBalance() {
    try {
        const response = await fetch('/payments/balance', {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${localStorage.getItem('token')}`
            },
            credentials: 'include'
        });

        if (response.ok) {
            const data = await response.json();
           
            if (data.success && data.data.balance !== undefined && data.data.balance !== null) {
                document.getElementById('balanceAmount').textContent = data.data.balance;
                
                // Update status
                const statusElement = document.getElementById('balanceStatus');
                if (data.data.balance < 15) {
                    statusElement.innerHTML = '<i class="fas fa-exclamation-triangle text-warning"></i> Low';
                } else if (data.data.balance < 50) {
                    statusElement.innerHTML = '<i class="fas fa-info-circle text-light"></i> OK';
                } else {
                    statusElement.innerHTML = '<i class="fas fa-check-circle text-success"></i> Good';
                }
            } else {
            throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        }
    } catch (error) {
        console.error('Error fetching balance:', error);
        document.getElementById('balanceStatus').innerHTML = '<i class="fas fa-exclamation-circle text-warning"></i> Error';
    }
}

// Update balance when page loads
document.addEventListener('DOMContentLoaded', function() {
    if (document.getElementById('headerBalance')) {
        updateHeaderBalance();
        
        // Update balance every 30 seconds
       // setInterval(updateHeaderBalance, 30000);
    }
});

// Also update balance when coming back from other tabs/windows
document.addEventListener('visibilitychange', function() {
    if (!document.hidden && document.getElementById('headerBalance')) {
        updateHeaderBalance();
    }
});
</script>

