<div class="container-fluid py-4">
    <div class="content-header">
        <h1 class="h3">
            <i class="fas fa-cogs"></i> System Configuration
        </h1>
        <p class="text-muted">Manage system-wide settings and configurations</p>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Configuration Settings</h5>
                    <button class="btn btn-primary btn-sm" id="addConfigBtn">
                        <i class="fas fa-plus"></i> Add Configuration
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Key</th>
                                    <th>Value</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="configTableBody">
                                <tr>
                                    <td colspan="5" class="text-center">
                                        <div class="spinner-border" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Configuration Modal -->
<div class="modal fade" id="configModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="configModalTitle">Add Configuration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="configForm">
                    <div class="mb-3">
                        <label for="configKey" class="form-label">Key</label>
                        <input type="text" class="form-control" id="configKey" required>
                    </div>
                    <div class="mb-3">
                        <label for="configValue" class="form-label">Value</label>
                        <textarea class="form-control" id="configValue" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="configDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="configDescription" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="configCategory" class="form-label">Category</label>
                        <input type="text" class="form-control" id="configCategory">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveConfigBtn">Save Configuration</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    loadConfigurations();
    
    document.getElementById('addConfigBtn').addEventListener('click', function() {
        showConfigModal();
    });
    
    document.getElementById('saveConfigBtn').addEventListener('click', saveConfiguration);
});

async function loadConfigurations() {
    try {
        const response = await axios.get('/api/config/all');
        const configurations = response.data.data;
        
        const tableBody = document.getElementById('configTableBody');
        
        if (configurations.length === 0) {
            tableBody.innerHTML = '<tr><td colspan="5" class="text-center py-4 text-muted">No configurations found</td></tr>';
            return;
        }
        
        let html = '';
        
        configurations.forEach(config => {
            html += `
                <tr>
                    <td><code>${config.key}</code></td>
                    <td>${config.value}</td>
                    <td>${config.description || '-'}</td>
                    <td><span class="badge bg-info">${config.category || 'General'}</span></td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" onclick="editConfiguration('${config.key}', '${config.value}', '${config.description || ''}', '${config.category || ''}')">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteConfiguration('${config.key}')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            `;
        });
        
        tableBody.innerHTML = html;
    } catch (error) {
        console.error('Error loading configurations:', error);
        document.getElementById('configTableBody').innerHTML = '<tr><td colspan="5" class="text-center py-4 text-danger">Error loading configurations</td></tr>';
    }
}

function showConfigModal(config = null) {
    const modal = new bootstrap.Modal(document.getElementById('configModal'));
    const form = document.getElementById('configForm');
    const title = document.getElementById('configModalTitle');
    
    form.reset();
    
    if (config) {
        title.textContent = 'Edit Configuration';
        document.getElementById('configKey').value = config.key;
        document.getElementById('configValue').value = config.value;
        document.getElementById('configDescription').value = config.description || '';
        document.getElementById('configCategory').value = config.category || '';
        document.getElementById('configKey').readOnly = true;
        form.dataset.editKey = config.key;
    } else {
        title.textContent = 'Add Configuration';
        document.getElementById('configKey').readOnly = false;
        delete form.dataset.editKey;
    }
    
    modal.show();
}

async function saveConfiguration() {
    const form = document.getElementById('configForm');
    const key = document.getElementById('configKey').value;
    const value = document.getElementById('configValue').value;
    const description = document.getElementById('configDescription').value;
    const category = document.getElementById('configCategory').value;
    
    if (!key || !value) {
        alert('Please fill in all required fields');
        return;
    }
    
    try {
        await axios.post('/api/config/set', {
            key,
            value,
            description,
            category
        });
        
        bootstrap.Modal.getInstance(document.getElementById('configModal')).hide();
        loadConfigurations();
        
    } catch (error) {
        console.error('Error saving configuration:', error);
        alert('Error saving configuration');
    }
}

function editConfiguration(key, value, description, category) {
    showConfigModal({ key, value, description, category });
}

async function deleteConfiguration(key) {
    if (!confirm(`Are you sure you want to delete configuration "${key}"?`)) {
        return;
    }
    
    try {
        // Note: You might want to add a delete endpoint for configurations
        // For now, we'll set an empty value
        await axios.post('/api/config/set', {
            key,
            value: '',
            description: 'Deleted',
            category: 'System'
        });
        
        loadConfigurations();
        
    } catch (error) {
        console.error('Error deleting configuration:', error);
        alert('Error deleting configuration');
    }
} 
</script>